{
    "model": {
        "type": "range_dispatch",
        "property": "custom_model_data",
        "fallback": {
            "type": "minecraft:condition",
			"property": "minecraft:using_item",
			"on_true": {
				"type": "minecraft:special",
				"model": {
					"type": "minecraft:shield"
				},
				"base": "item/shield_blocking"
			},
			"on_false": {
				"type": "minecraft:special",
				"model": {
					"type": "minecraft:shield"
				},
				"base": "item/shield"
			}
        },
        "entries": [
            {
                "threshold": 1,
				"model": {
					"type": "minecraft:condition",
					"property": "minecraft:using_item",
					"on_true": {
						"type": "model",
						"model": "item/boromir_shield/boromir_shield_blocking"
					},
					"on_false": {
						"type": "model",
						"model": "item/boromir_shield/boromir_shield"
					}
				}
            },
			{
                "threshold": 2,
				"model": {
					"type": "minecraft:condition",
					"property": "minecraft:using_item",
					"on_true": {
						"type": "model",
						"model": "item/gondor/shield/gondor_shield_blocking"
					},
					"on_false": {
						"type": "model",
						"model": "item/gondor/shield/gondor_shield"
					}
				}
            }
        ]
    }
}